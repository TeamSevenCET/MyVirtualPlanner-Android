<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222B3D">

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Present : Click/Tap       Absent : LongClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/attendance_heading" />

    <Button
        android:id="@+id/attd_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="#3ed646"
        android:padding="10sp"
        android:text="SUBMIT FOR THE DAY"
        android:textColor="#000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3" />

    <TextView
        android:id="@+id/attendance_heading"
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:layout_marginTop="32dp"
        android:background="#50000000"
        android:paddingTop="6sp"
        android:text="    ATTENDANCE"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="261sp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="128dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/attd_tv1"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:padding="5sp"
                android:text="" />

            <TextView
                android:id="@+id/attd_tv2"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:padding="5sp"
                android:text="" />

            <TextView
                android:id="@+id/attd_tv3"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:padding="5sp"
                android:text="" />

            <TextView
                android:id="@+id/attd_tv4"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:padding="5sp"
                android:text="" />

            <TextView
                android:id="@+id/attd_tv5"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:padding="5sp"
                android:text="" />

            <TextView
                android:id="@+id/attd_tv6"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:padding="5sp"
                android:text="" />

            <TextView
                android:id="@+id/attd_tv7"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:padding="5sp"
                android:text="" />

            <TextView
                android:id="@+id/attd_tv8"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:padding="5sp"
                android:text="" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/attd_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/attd_submit" />

</android.support.constraint.ConstraintLayout>